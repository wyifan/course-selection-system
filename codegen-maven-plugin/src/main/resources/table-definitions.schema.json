{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TableDefinitions",
  "type": "object",
  "properties": {
    "tables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "tableName": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "数据库表名，建议使用下划线小写命名"
          },
          "entityName": {
            "type": "string",
            "pattern": "^[A-Z][A-Za-z0-9]*$",
            "description": "Java 实体类名，驼峰命名"
          },
          "columns": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "javaName": {
                  "type": "string",
                  "pattern": "^[a-z][A-Za-z0-9]*$",
                  "description": "Java 字段名，小驼峰命名"
                },
                "javaType": {
                  "type": "string",
                  "enum": [
                    "String", "Integer", "Long", "Double",
                    "BigDecimal", "LocalDate", "LocalDateTime",
                    "Boolean"
                  ],
                  "description": "Java 字段类型"
                },
                "comment": {
                  "type": "string",
                  "description": "字段备注"
                }
              },
              "required": ["javaName", "javaType"]
            }
          }
        },
        "required": ["tableName", "entityName", "columns"]
      }
    }
  },
  "required": ["tables"]
}
